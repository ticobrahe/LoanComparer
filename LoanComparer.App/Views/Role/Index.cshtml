@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

    <div class="container mt-72">
        @if (TempData["ResultMessage"] != null)
        {
            <p class="alert alert-success">@TempData["ResultMessage"]</p>
        }
        @if (TempData["error"] != null)
        {
            <p class="alert alert-danger">@TempData["error"]</p>
        }
        <h2>Roles </h2>

        @Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Create User Role", "CreateUserRole")
        <hr />
        <div>
            @foreach (var role in Model)
            {
                <p>
                    <strong>@role.Name | </strong>
                    <span onclick="return confirm('Are you sure you want to delete?')"> @Html.ActionLink("Delete", "Delete", new { Id = @role.Id},new {@class = "delete"})</span> |
                    @Html.ActionLink("Edit", "Edit", new { Id = @role.Id })
                </p>
            }
            @ViewBag.Deleted
        </div>
    </div>

