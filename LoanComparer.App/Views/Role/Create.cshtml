
@{
    ViewBag.Title = "Create";
}

<div class="container mt-72">
    @if (ViewBag.ResultMessage != null)
    {
    <p class="alert alert-success">@ViewBag.ResultMessage</p>
    }
    <h2>Create</h2>

    @Html.ActionLink("List Roles", "Index") | @Html.ActionLink("Create User Role", "CreateUserRole")
    <hr/>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label for="roleName"> Role Name</label>
        </div>
        <div class="form-group">
            <input type="text" name="roleName" class="form-control"/>
        </div>
        <input type="submit" value="Save" class="btn btn-success btn-submit"/>
    }

</div>
