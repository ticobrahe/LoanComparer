@model LoanComparer.App.Models.ManageUserViewModel
@{
    ViewBag.Title = "ManageUsers";

}



    <div class="container mt-72">
        @if (ViewBag.Message  != null)
        {
            <p class="alert alert-success">@ViewBag.Message </p>
        }
        @if (ViewBag.Error  != null)
        {
            <p class="alert alert-danger">@ViewBag.Error </p>
        }
        <h3>Create User Roles</h3>
        @Html.ActionLink("Find user role", "GetUserRole") | @Html.ActionLink("All roles", "Index")
        <hr />

        <h4 class="pb-20">Add user to role</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group pb-60">
                <div class="col-md-2 control-label">
                    <label for="email">Email</label>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">
                    <label for="RoleName">Role Name</label>
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", new { @class = "select" })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>
            </div>


            <input type="submit" value="Save" class="btn btn-success btn-submit" />
        }
        <hr />
        

        <hr />
        <h3>Delete A User from a Role</h3>

        @using (Html.BeginForm("DeleteRoleForUser", "Roles"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <p>
                Username : @Html.TextBox("UserName")
                Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")

            </p>

            <input type="submit" value="Delete this user from Role" />
        }
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
